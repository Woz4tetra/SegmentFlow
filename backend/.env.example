# Environment variables for SegmentFlow backend

# Database configuration
DATABASE_URL=sqlite+aiosqlite:///./segmentflow.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/segmentflow

# CORS origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Debug mode
DEBUG=true

# File storage
PROJECTS_ROOT_DIR=./data/projects

# Processing configuration
MAX_PROPAGATION_LENGTH=1000
INFERENCE_WIDTH=1024
OUTPUT_WIDTH=1920
MASK_TRANSPARENCY=0.5
BIG_JUMP_SIZE=10
